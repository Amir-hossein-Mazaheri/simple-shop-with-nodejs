<form action="/shop/cart" method="POST">
  <button
    class="px-3 py-1 bg-white border border-emerald-700 text-emerald-700 rounded-lg font-semibold"
    type="submit"
  >
    Add to Cart
  </button>
  <input type="hidden" value="<%= csrfToken %>" name="_csrf" />
  <input type="hidden" name="prodId" value="<%= prodId %>" />
</form>
